{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "OpenVDC Resource Template: vm/qemu",
  "type": "object",
  "required": [
    "type"
  ],
  "properties": {
    "_comment": {
      "type": "string"
    },
    "type": {
      "enum": [
        "vm/qemu"
      ]
    },
    "min_vcpu": {
      "type": "integer",
      "default": 1
    },
    "min_memory_gb": {
      "type": "integer",
      "default": 1
    },
    "vcpu": {
      "type": "integer",
      "default": 1
    },
    "memory_gb": {
      "type": "integer",
      "default": 1
    },
    "node_groups": {
      "type": "array",
      "uniqueItems": true,
      "items": [
        {"type": "string"}
      ]
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "veth",
              "none",
              "empty",
              "vlan",
              "macvlan",
              "phys"
            ]
          },
          "macaddr": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{2}[0-9a-fA-F:]+$"
          },
          "ipv4addr": {
            "type": "string",
            "format": "ipv4"
          },
          "ipv4gateway": {
            "type": "string",
            "format": "ipv4"
          }
        }
      }
    },
    "qemu_image": {
      "type": "object",
      "properties": {
        "_comment": {
          "type": "string"
        },
        "download_url": {
          "type": "string",
          "format": "uri"
        },
        "checksum_type": {
          "type": "string"
        },
        "checksum": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": [
            "raw",
            "qcow2"
          ]
        }
      },
      "required": [
        "download_url",
        "format"
      ]
    },
    "use_kvm": {
      "type": "boolean",
      "default": false
    }
  }
}
